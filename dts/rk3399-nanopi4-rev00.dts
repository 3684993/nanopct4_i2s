/dts-v1/;
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/pinctrl/rockchip.h>
#include "rk3399-nanopi4-common.dtsi"

/ {
    model = "FriendlyElec NanoPC-T4";
    compatible = "friendlyelec,nanopc-t4", "rockchip,rk3399";

    sound {
        compatible = "simple-audio-card";
        simple-audio-card,name = "INMP441-Mic";
        simple-audio-card,format = "i2s";
        simple-audio-card,mclk-fs = <256>;
        status = "okay";

        simple-audio-card,cpu {
            sound-dai = <&i2s1>;
        };

        simple-audio-card,codec {
            sound-dai = <&inmp441>;
        };
    };

    inmp441: inmp441-codec {
        compatible = "invensense,inmp441";
        #sound-dai-cells = <0>;
        status = "okay";
    };

    /* 外部时钟输入，用于 I2S1 MCLK */
    osc45m: osc45m {
        compatible = "fixed-clock";
        #clock-cells = <0>;
        clock-frequency = <45158400>;
    };

    osc49m: osc49m {
        compatible = "fixed-clock";
        #clock-cells = <0>;
        clock-frequency = <49152000>;
    };

    clkin_i2s: clkin_i2s {
        compatible = "gpio-mux-clock";
        #clock-cells = <0>;
        clock-output-names = "clkin_i2s";
        clocks = <&osc45m>, <&osc49m>;
        select-gpios = <&gpio0 RK_PB6 GPIO_ACTIVE_HIGH>;
    };
};

&mach {
    hwrev = <0>;
    model = "NanoPC-T4";
};

&dfi {
    status = "okay";
};

&dmc {
    status = "okay";
    center-supply = <&vdd_center>;
    upthreshold = <40>;
    downdifferential = <20>;
    system-status-freq = <
        /*system status         freq(KHz)*/
        SYS_STATUS_NORMAL       800000
        SYS_STATUS_REBOOT       528000
        SYS_STATUS_SUSPEND      200000
        SYS_STATUS_VIDEO_1080P  200000
        SYS_STATUS_VIDEO_4K     600000
        SYS_STATUS_VIDEO_4K_10B 800000
        SYS_STATUS_PERFORMANCE  800000
        SYS_STATUS_BOOST        600000
        SYS_STATUS_DUALVIEW     600000
        SYS_STATUS_ISP          600000
    >;
    vop-bw-dmc-freq = <
        /* min_bw(MB/s) max_bw(MB/s) freq(KHz) */
        0       577      200000
        578     924      400000
        925     2075     600000
        2076    99999    800000
    >;
    auto-min-freq = <200000>;
    auto-freq-en = <1>;
};

&pcie0 {
    ep-gpios = <&gpio2 4 GPIO_ACTIVE_HIGH>;
    pinctrl-names = "default";
    pinctrl-0 = <&pcie_gpios>;
    num-lanes = <4>;
    max-link-speed = <2>;
};

&pwm3 {
    status = "okay";
};

&i2s0 {
    pinctrl-0 = <&i2s0_2ch_bus>;
    status = "okay";
};

&i2s1 {
    compatible = "rockchip,rk3399-i2s", "rockchip,rk3066-i2s";
    reg = <0x0 0xff890000 0x0 0x1000>;
    interrupts = <GIC_SPI 40 IRQ_TYPE_LEVEL_HIGH 0>;
    dmas = <&dmac_bus 2>, <&dmac_bus 3>;
    dma-names = "tx", "rx";
    clocks = <&cru SCLK_I2S1_8CH>, <&cru HCLK_I2S1_8CH>, <&clkin_i2s>;
    clock-names = "i2s_clk", "i2s_hclk", "i2s_mclk";
    resets = <&cru SRST_I2S1_8CH>, <&cru SRST_H_I2S1_8CH>;
    reset-names = "reset-m", "reset-h";
    pinctrl-names = "default";
    pinctrl-0 = <&i2s1_2ch_bus>;
    power-domains = <&power RK3399_PD_SDIOAUDIO>;
    rockchip,grf = <&grf>;
    rockchip,capture-channels = <2>;
    rockchip,playback-channels = <2>;
    #sound-dai-cells = <0>;
    status = "okay";
};

&i2s2 {
    status = "disabled"; /* 禁用 i2s2 以避免资源冲突 */
};

&pinctrl {
    i2s1 {
        i2s1_2ch_bus: i2s1-2ch-bus {
            rockchip,pins =
                <4 3 RK_FUNC_1 &pcfg_pull_none>, /* I2S1_SCLK */
                <4 4 RK_FUNC_1 &pcfg_pull_none>, /* I2S1_LRCK */
                <4 5 RK_FUNC_1 &pcfg_pull_none>, /* I2S1_SDI */
                <4 6 RK_FUNC_1 &pcfg_pull_none>, /* I2S1_SDO */
                <4 7 RK_FUNC_1 &pcfg_pull_none>; /* I2S1_MCLK */
        };
    };
};
